<Alloy>
    <Collection src="place"/>
    <Window id="winCreateDate" title="neuer Termin">
        <LeftNavButton>
            <Button title="Abbrechen" onClick="goBack" />
        </LeftNavButton>
        <RightNavButton>
            <Button title="Fertig" onClick="btnCreateDate_Click" />
        </RightNavButton>
        <VideoPlayer id="videoPlayer" ns="Ti.Media" top="0" url="/default_office.mp4" mediaControlStyle="Titanium.Media.VIDEO_CONTROL_NONE" scalingMode="Ti.Media.VIDEO_SCALING_ASPECT_FILL"
        repeatMode="Ti.Media.VIDEO_REPEAT_MODE_ONE" width="100%" height="100%" autoplay="true" />
        <ScrollView class="form" layout="vertical">
            <View class="pickerContainer">
                <View id="vOffice" layout="absolute" status="compact" class="pickerRow">
                    <Label id="lblOffice" onClick="lblOffice_Click" width="90%" top="0">Ort</Label>
                    <Picker id="pkrOffice" selectionIndicator="true" class="picker" useSpinner="true" onChange="pkrOffice_Change">
                        <PickerRow title=""/>
                    </Picker>
                </View>
            </View>
            <View class="pickerContainer">
                <View id="vCanteen" layout="absolute" status="compact" class="pickerRow">
                    <Label id="lblCanteen" onClick="lblCanteen_Click" width="90%" top="0">Kantine</Label>
                    <Picker id="pkrCanteen" selectionIndicator="true" class="picker" useSpinner="true" onChange="pkrCanteen_Change">
                        <PickerRow title=""/>
                    </Picker>
                </View>
            </View>
            <View class="pickerContainer">
                <View id="vDateAndTime" layout="absolute" status="compact" class="pickerRow">
                    <Label id="lblDateAndTime" onClick="lblDateAndTime_Click" width="90%" top="0">Beginn</Label>
                    <Picker id="pkrDate" type="Titanium.UI.PICKER_TYPE_DATE_AND_TIME" class="picker" onChange="pkrDate_Change" minuteInterval="15" format24="true" selectionIndicator="true" ></Picker>
                </View>
            </View>
            <View class="pickerContainer">
                <View id="vDuration" layout="absolute" status="compact" class="pickerRow">
                    <Label id="lblDuration" onClick="lblDuration_Click" width="90%" top="0">Zeitrahmen</Label>
                    <Picker id="pkrDuration" selectionIndicator="true" onChange="pkrDuration_Change" class="picker"useSpinner="true">
                        <PickerColumn id="column1">
                            <PickerRow title="30 Min" value="1800"/>
                            <PickerRow title="45 Min" value="2700"/>
                            <PickerRow title="1 Std." value="3600"/>
                            <PickerRow title="1:15 Std." value="4500"/>
                        </PickerColumn>
                    </Picker>
                </View>
            </View>
        </ScrollView>
    </Window>
</Alloy>